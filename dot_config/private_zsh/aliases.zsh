alias reload!='. ~/.zshrc'

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"
alias cdot="chezmoi cd"

# Shortcuts
alias m="mvim"
alias v="vim"
alias o="open"
alias oo="open ."

# ls
alias l="exa -lah"
alias ll="exa -l"
alias la='exa -a'
alias kl="k --almost-all"
