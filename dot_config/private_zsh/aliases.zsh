alias reload!='. ~/.zshrc'

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"
alias cdot="chezmoi cd"

# Shortcuts
alias v="nvim"
alias o="open"
alias oo="open ."

# ls
alias l="eza -lah"
alias ll="eza -l"
alias la='eza -a'
alias kl="k --almost-all"

# Fix blank camera in zoom
alias zoom-fix="sudo killall VDCAssistant"
